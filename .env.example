# ==========================================
# IPZY AI Server Environment Variables
# ==========================================

# Server Configuration
PROJECT_NAME=Fashion Coordination AI
API_PREFIX=/api
ALLOWED_ORIGINS=["*"]

# Database Configuration (Java 백엔드의 postgres 컨테이너에 연결)
DB_HOST=ipzy-postgres
DB_PORT=5432
DB_NAME=ipzy_db
DB_USERNAME=postgres
DB_PASSWORD=your-db-password-here

# OpenAI API Key (코디 추천 AI용)
OPENAI_API_KEY=sk-your-openai-key-here

# Backend Integration
BACKEND_API_URL=http://ipzy-app:8080
BACKEND_API_KEY=your-secret-backend-api-key

# AWS S3 Configuration (이미지 합성 & 업로드용)
# aws configure 사용
AWS_S3_BUCKET=team-ipzy-images
AWS_REGION=ap-northeast-2
S3_IMAGE_PREFIX=background-removed
S3_COMPOSITE_PREFIX=composite

# AI Model Settings
MAX_RECOMMENDATIONS=3
MAX_PRODUCTS_PER_CATEGORY=5

# Logging
LOG_LEVEL=INFO