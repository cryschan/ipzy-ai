# ==========================================
# IPZY AI Server Environment Variables
# ==========================================
#
# 사용법:
# 1. 이 파일을 복사: cp .env.example .env
# 2. .env 파일을 열어서 실제 값으로 변경
# 3. 절대 .env 파일을 git에 커밋하지 마세요!

# Server Configuration
PROJECT_NAME=Fashion Coordination AI
API_PREFIX=/api
ALLOWED_ORIGINS=["*"]

# OpenAI API Key (코디 추천 AI용)
OPENAI_API_KEY=sk-your-openai-key-here
GOOGLE_API_KEY=your-google-gemini-key-here

# Backend Integration
BACKEND_API_URL=http://ipzy-app:8080
BACKEND_API_KEY=your-secret-backend-api-key

# AWS S3 Configuration (이미지 합성 & 업로드용)
# aws configure 사용
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=ap-northeast-2
S3_IMAGE_PREFIX=background-removed
S3_COMPOSITE_PREFIX=composite

# LLM Provider (gemini | openai | claude)
LLM_PROVIDER=openai
LLM_MODEL=gpt-3.5-turbo

# AI Model Settings
MAX_RECOMMENDATIONS=3           # 추천 코디 개수
MAX_PRODUCTS_PER_CATEGORY=5     # 카테고리당 후보 상품 수

# Logging Level (DEBUG | INFO | WARNING | ERROR)
LOG_LEVEL=INFO