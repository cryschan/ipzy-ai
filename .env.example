# ==========================================
# IPZY AI Server Environment Variables
# ==========================================

# Server Configuration
PROJECT_NAME=Fashion Coordination AI
API_PREFIX=/api
ALLOWED_ORIGINS=["*"]

# API Keys (Required)
OPENAI_API_KEY=sk-your-openai-key-here
GOOGLE_API_KEY=your-google-gemini-key-here

# Backend Integration
BACKEND_API_URL=http://ipzy-app:8080
BACKEND_API_KEY=your-secret-backend-api-key

# ChromaDB Configuration
VECTOR_DB_PATH=./data/vector_db
CHROMA_COLLECTION_NAME=fashion_products

# Image Processing
IMAGE_OUTPUT_DIR=./outputs/composites

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=ap-northeast-2
S3_IMAGE_PREFIX=background-removed

# AI Model Settings
MAX_RECOMMENDATIONS=3
MAX_PRODUCTS_PER_CATEGORY=5

# LLM Provider (gemini | openai | claude)
LLM_PROVIDER=gemini

# LLM Model Selection
# Gemini: gemini-1.5-flash | gemini-1.5-pro
# OpenAI: gpt-4o-mini | gpt-4o
# Claude: claude-3-5-haiku | claude-3-5-sonnet
LLM_MODEL=gemini-1.5-flash

# Logging
LOG_LEVEL=INFO
